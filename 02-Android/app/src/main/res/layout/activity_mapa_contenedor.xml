<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapaContenedorActivity">

    <Button
            android:text="Quito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_quito" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_julio_andrade" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.25" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/map" app:layout_constraintVertical_bias="0.152"/>
    <Button
            android:text="Julio Adrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_julio_andrade"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/map"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="361dp"
              android:id="@+id/map"
              tools:context=".MapsActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_marginBottom="8dp"
              map:layout_constraintBottom_toBottomOf="parent" map:layout_constraintStart_toStartOf="parent"
              map:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>