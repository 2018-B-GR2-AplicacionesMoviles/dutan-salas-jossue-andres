<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CicloVidaActivity">

    <TextView
            android:text="Contador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_contador" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Aumentar contador"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/button_contador" app:layout_constraintStart_toStartOf="@+id/text_view_contador"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_contador"
            app:layout_constraintEnd_toEndOf="@+id/text_view_contador"/>
</android.support.constraint.ConstraintLayout>