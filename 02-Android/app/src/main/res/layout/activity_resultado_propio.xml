<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultadoPropioActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:ems="10"
            android:id="@+id/texto_nombre" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Apellido"
            android:ems="10"
            android:id="@+id/texto_apellido"
            app:layout_constraintStart_toStartOf="@+id/texto_nombre" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/texto_nombre"
            app:layout_constraintEnd_toEndOf="@+id/texto_nombre" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_devolver_respuesta"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/texto_apellido"
            app:layout_constraintStart_toStartOf="@+id/texto_apellido"
            app:layout_constraintEnd_toEndOf="@+id/texto_apellido" app:layout_constraintHorizontal_bias="0.504"/>
</android.support.constraint.ConstraintLayout>