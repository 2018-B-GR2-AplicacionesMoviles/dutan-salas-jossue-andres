<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text="@string/textoPrincipal"
            android:textColor="@color/colorGreen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView" app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="40dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/textView" android:layout_marginEnd="40dp"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textView3"/>
    <Button
            android:text="ntent Correo"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:id="@+id/boton_navegar" app:layout_constraintEnd_toEndOf="@+id/editText"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginEnd="76dp"/>
    <Button
            android:text="Intent Res"
            android:layout_width="74dp"
            android:layout_height="67dp"
            android:id="@+id/button_intent_respuesta" app:layout_constraintEnd_toStartOf="@+id/boton_navegar"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="Ciclo de vida"
            android:layout_width="72dp"
            android:layout_height="71dp"
            android:id="@+id/button_ciclo_vida" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/boton_navegar" android:layout_marginStart="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintHorizontal_bias="0.638"/>
    <Button
            android:text="Int parcelable"
            android:layout_width="118dp"
            android:layout_height="53dp" android:id="@+id/button_int_parcelable"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/boton_navegar"
            app:layout_constraintStart_toStartOf="@+id/boton_navegar"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintEnd_toEndOf="@+id/boton_navegar"/>
    <Button
            android:text="Adaptadores"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:id="@+id/button_adaptador" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/button_ciclo_vida"
            app:layout_constraintStart_toStartOf="@+id/button_ciclo_vida"
            app:layout_constraintEnd_toEndOf="@+id/button_ciclo_vida" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Fragmento"
            android:layout_width="108dp"
            android:layout_height="43dp"
            android:id="@+id/button_fragmentos" app:layout_constraintEnd_toEndOf="@+id/button_int_parcelable"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_int_parcelable"
            app:layout_constraintStart_toStartOf="@+id/button_int_parcelable"
            app:layout_constraintHorizontal_bias="0.541" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="R. View"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_recycler_view"
            app:layout_constraintStart_toStartOf="@+id/button_intent_respuesta"
            app:layout_constraintEnd_toEndOf="@+id/button_intent_respuesta" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/button_intent_respuesta"
            app:layout_constraintHorizontal_bias="0.388"/>
    <Button
            android:text="Http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_http" app:layout_constraintEnd_toEndOf="@+id/button_adaptador"
            app:layout_constraintStart_toStartOf="@+id/button_adaptador" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_adaptador" app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>